{
  "app": {
    "name": "Civilization Sphere",
    "version": "2.0.0",
    "description": "Інтерактивна платформа для візуалізації та аналізу геополітичних подій у часі та просторі",
    "language": "uk",
    "lastUpdated": "2024-12-19"
  },
  "phases": {
    "phase1": {
      "name": "Стабілізація та інтеграції",
      "timeline": "Q1 2025",
      "priority": "high",
      "goals": [
        "Покращення стабільності та продуктивності",
        "Впровадження зовнішніх API інтеграцій",
        "Забезпечення високої якості даних"
      ],
      "features": {
        "performance": {
          "lazyLoading": true,
          "virtualization": true,
          "caching": true,
          "targetLoadTime": "3s"
        },
        "integrations": {
          "externalAPIs": {
            "priority": "high",
            "enabled": true,
            "providers": [
              {
                "name": "NewsAPI",
                "type": "news",
                "status": "planned",
                "endpoint": "https://newsapi.org/v2",
                "rateLimit": "1000/day",
                "authentication": "apiKey"
              },
              {
                "name": "YouTube Data API",
                "type": "video",
                "status": "planned",
                "endpoint": "https://www.googleapis.com/youtube/v3",
                "rateLimit": "10000/day",
                "authentication": "oauth2"
              },
              {
                "name": "Twitter API",
                "type": "social",
                "status": "planned",
                "endpoint": "https://api.twitter.com/2",
                "rateLimit": "300/15min",
                "authentication": "bearer"
              }
            ]
          },
          "socialSharing": {
            "enabled": true,
            "platforms": ["facebook", "twitter", "telegram", "linkedin"]
          }
        },
        "dataQuality": {
          "priority": "critical",
          "validation": {
            "enabled": true,
            "rules": {
              "requiredFields": ["title", "date", "location", "category", "source_url", "channel_name"],
              "dateValidation": true,
              "locationValidation": true,
              "contentLength": { "min": 10, "max": 1000 },
              "duplicateDetection": true,
              "sourceCredibilityCheck": true,
              "qualityThreshold": 0.7
            }
          },
          "qualityMetrics": {
            "completeness": 0.90,
            "accuracy": 0.85,
            "consistency": 0.80,
            "timeliness": 0.75,
            "sourceCredibility": 0.80
          },
          "governance": {
            "enabled": true,
            "sourceTiering": true,
            "factChecking": true,
            "auditTrail": true,
            "qualityReporting": true
          }
        }
      }
    },
    "phase2": {
      "name": "Розширення функціональності",
      "timeline": "Q2 2025",
      "priority": "medium",
      "goals": [
        "Додавання нових можливостей аналізу",
        "Покращення візуалізації",
        "Персоналізація користувацького досвіду"
      ],
      "features": {
        "analytics": {
          "heatmaps": true,
          "relationshipGraphs": true,
          "statistics": true
        },
        "personalization": {
          "userSettings": true,
          "customFilters": true,
          "bookmarks": true
        },
        "visualization": {
          "animatedTransitions": true,
          "3DEffects": true,
          "interactiveCharts": true
        }
      }
    },
    "phase3": {
      "name": "Розширення контенту",
      "timeline": "Q3 2025",
      "priority": "medium",
      "goals": [
        "Значне розширення бази даних",
        "Додавання нових джерел",
        "Географічне розширення"
      ],
      "features": {
        "contentExpansion": {
          "newChannels": 5,
          "newCategories": 4,
          "geographicExpansion": ["Africa", "Latin America", "Oceania"]
        }
      }
    },
    "phase4": {
      "name": "Розумні функції",
      "timeline": "Q4 2025",
      "priority": "low",
      "goals": [
        "Впровадження AI та машинного навчання",
        "Автоматична класифікація подій",
        "Передбачувальна аналітика"
      ],
      "features": {
        "ai": {
          "autoClassification": true,
          "trendPrediction": true,
          "smartRecommendations": true
        }
      }
    }
  },
  "dataGovernance": {
    "enabled": true,
    "version": "1.0.0",
    "lastUpdated": "2024-12-19",
    "sourceCredibility": {
      "enabled": true,
      "tracking": {
        "reliabilityScore": {
          "range": "0-100",
          "factors": [
            "sourceReputation",
            "factChecking",
            "crossVerification",
            "temporalAccuracy",
            "editorialStandards",
            "biasRating"
          ]
        },
        "verificationStatus": [
          "verified",
          "monitored",
          "unverified",
          "disputed"
        ],
        "tierSystem": {
          "tier1": "Verified, high-quality sources with established credibility",
          "tier2": "Reliable sources with good track record but require monitoring",
          "tier3": "Sources requiring additional verification and lower confidence weighting"
        }
      },
      "sources": {
        "tier1": [
          {
            "name": "BBC News",
            "type": "news",
            "reliabilityScore": 95,
            "verificationStatus": "verified",
