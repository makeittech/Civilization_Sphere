{
  "app": {
    "name": "Civilization Sphere",
    "version": "2.0.0",
    "description": "Інтерактивна платформа для візуалізації та аналізу геополітичних подій у часі та просторі",
    "language": "uk",
    "lastUpdated": "2024-12-19"
  },
  "phases": {
    "phase1": {
      "name": "Стабілізація та інтеграції",
      "timeline": "Q1 2025",
      "priority": "high",
      "goals": [
        "Покращення стабільності та продуктивності",
        "Впровадження зовнішніх API інтеграцій",
        "Забезпечення високої якості даних"
      ],
      "features": {
        "performance": {
          "lazyLoading": true,
          "virtualization": true,
          "caching": true,
          "targetLoadTime": "3s"
        },
        "integrations": {
          "externalAPIs": {
            "priority": "high",
            "enabled": true,
            "providers": [
              {
                "name": "NewsAPI",
                "type": "news",
                "status": "planned",
                "endpoint": "https://newsapi.org/v2",
                "rateLimit": "1000/day",
                "authentication": "apiKey"
              },
              {
                "name": "YouTube Data API",
                "type": "video",
                "status": "planned",
                "endpoint": "https://www.googleapis.com/youtube/v3",
                "rateLimit": "10000/day",
                "authentication": "oauth2"
              },
              {
                "name": "Twitter API",
                "type": "social",
                "status": "planned",
                "endpoint": "https://api.twitter.com/2",
                "rateLimit": "300/15min",
                "authentication": "bearer"
              }
            ]
          },
          "socialSharing": {
            "enabled": true,
            "platforms": ["facebook", "twitter", "telegram", "linkedin"]
          }
        },
        "dataQuality": {
          "priority": "critical",
          "validation": {
            "enabled": true,
            "rules": [
              "requiredFields": ["title", "date", "location", "category"],
              "dateValidation": true,
              "locationValidation": true,
              "contentLength": { "min": 10, "max": 1000 },
              "duplicateDetection": true
            ]
          },
          "qualityMetrics": {
            "completeness": 0.95,
            "accuracy": 0.90,
            "consistency": 0.85,
            "timeliness": 0.80
          }
        }
      }
    },
    "phase2": {
      "name": "Розширення функціональності",
      "timeline": "Q2 2025",
      "priority": "medium",
      "goals": [
        "Додавання нових можливостей аналізу",
        "Покращення візуалізації",
        "Персоналізація користувацького досвіду"
      ],
      "features": {
        "analytics": {
          "heatmaps": true,
          "relationshipGraphs": true,
          "statistics": true
        },
        "personalization": {
          "userSettings": true,
          "customFilters": true,
          "bookmarks": true
        },
        "visualization": {
          "animatedTransitions": true,
          "3DEffects": true,
          "interactiveCharts": true
        }
      }
    },
    "phase3": {
      "name": "Розширення контенту",
      "timeline": "Q3 2025",
      "priority": "medium",
      "goals": [
        "Значне розширення бази даних",
        "Додавання нових джерел",
        "Географічне розширення"
      ],
      "features": {
        "contentExpansion": {
          "newChannels": 5,
          "newCategories": 4,
          "geographicExpansion": ["Africa", "Latin America", "Oceania"]
        }
      }
    },
    "phase4": {
      "name": "Розумні функції",
      "timeline": "Q4 2025",
      "priority": "low",
      "goals": [
        "Впровадження AI та машинного навчання",
        "Автоматична класифікація подій",
        "Передбачувальна аналітика"
      ],
      "features": {
        "ai": {
          "autoClassification": true,
          "trendPrediction": true,
          "smartRecommendations": true
        }
      }
    }
  },
  "dataGovernance": {
    "sourceCredibility": {
      "enabled": true,
      "tracking": {
        "reliabilityScore": {
          "range": "0-100",
          "factors": [
            "sourceReputation",
            "factChecking",
            "crossVerification",
            "temporalAccuracy"
          ]
        },
        "verificationStatus": [
          "verified",
          "pending",
          "disputed",
          "unverified"
        ]
      },
      "sources": {
        "youtube": {
          "channels": [
            {
              "name": "Український канал 1",
              "reliabilityScore": 85,
              "verificationStatus": "verified",
              "lastUpdated": "2024-12-15"
            }
          ],
          "defaultReliabilityScore": 70
        },
        "news": {
          "providers": [
            {
              "name": "BBC News",
              "reliabilityScore": 95,
              "verificationStatus": "verified"
            },
            {
              "name": "Reuters",
              "reliabilityScore": 92,
              "verificationStatus": "verified"
            }
          ]
        }
      }
    },
    "dataQuality": {
      "validation": {
        "automated": {
          "enabled": true,
          "checks": [
            "duplicateDetection",
            "dateValidation",
            "locationValidation",
            "contentQuality"
          ]
        },
        "manual": {
          "enabled": true,
          "reviewThreshold": 0.7,
          "expertReview": true
        }
      },
      "standards": {
        "completeness": {
          "required": 0.95,
          "current": 0.87
        },
        "accuracy": {
          "required": 0.90,
          "current": 0.82
        },
        "consistency": {
          "required": 0.85,
          "current": 0.78
        }
      }
    },
    "privacy": {
      "dataRetention": "2 years",
      "anonymization": true,
      "gdprCompliance": true
    }
  },
  "technical": {
    "architecture": {
      "frontend": "Vanilla JavaScript + Leaflet",
      "backend": "Node.js",
      "database": "JSON files",
      "deployment": "Static hosting"
    },
    "performance": {
      "targets": {
        "loadTime": "2s",
        "interactiveTime": "3s",
        "lighthouseScore": 90
      },
      "optimization": {
        "lazyLoading": true,
        "imageOptimization": true,
        "codeSplitting": false,
        "caching": true
      }
    },
    "security": {
      "https": true,
      "csp": true,
      "rateLimiting": true,
      "inputValidation": true
    }
  },
  "content": {
    "taxonomy": {
      "regions": [
        "Європа", "Північна Америка", "Азія", "Близький Схід", 
        "Африка", "Латинська Америка", "Океанія", "Глобально",
        "Ukraine", "Europe", "Asia", "Middle East", "Africa", 
        "North America", "South America", "Oceania", "Global"
      ],
      "categories": [
        "Війни та конфлікти",
        "Політичні зміни", 
        "Економічні зміни",
        "Технологічні зміни",
        "Політичні системи",
        "Союзи та договори",
        "Тероризм",
        "Глобальні кризи",
        "Інфраструктурні проекти",
        "Культурні зміни",
        "Військові аналізи",
        "Соціально-економічні моделі",
        "Економічні моделі",
        "Кліматичні зміни",
        "Кібербезпека",
        "Космічні програми",
        "Біотехнології"
      ]
    },
    "sources": {
      "youtube": {
        "enabled": true,
        "channels": [
          {
            "name": "Український аналітичний канал",
            "url": "https://youtube.com/channel/example",
            "reliabilityScore": 85,
            "language": "uk",
            "focus": "геополітика"
          }
        ]
      },
      "news": {
        "enabled": true,
        "providers": [
          {
            "name": "BBC News",
            "apiKey": "env:BBC_API_KEY",
            "reliabilityScore": 95
          }
        ]
      }
    }
  },
  "monitoring": {
    "analytics": {
      "googleAnalytics": {
        "enabled": true,
        "trackingId": "env:GA_TRACKING_ID"
      },
      "customMetrics": {
        "eventViews": true,
        "userEngagement": true,
        "performanceMetrics": true
      }
    },
    "logging": {
      "level": "info",
      "file": "logs/app.log",
      "maxSize": "10MB",
      "maxFiles": 5
    },
    "alerts": {
      "errorRate": 0.05,
      "responseTime": 5000,
      "uptime": 0.99
    }
  },
  "deployment": {
    "environment": "production",
    "hosting": "static",
    "cdn": true,
    "ssl": true,
    "backup": {
      "enabled": true,
      "frequency": "daily",
      "retention": "30 days"
    }
  }
}